import java.io.*;
import java.net.*;
import java.util.Scanner;
//	/textDirectory/text1.txt

public class ClientSide {

	public static void main(String[] args) throws IOException {

		String server = "127.0.0.1"; //서버주소 (서버가 없으니 로컬 호스트로 대신함)
		int port = 8801; //포트주소
		Scanner scan = new Scanner(System.in);
		Socket c = new Socket(server, port); //소켓(받는이)
		
		//1. 디렉토리 보여주기 명령어
		String COMMAND_DIRECTORY = "rdir";
		//2. 파일가져오기 명령어
		String COMMAND_GETFILE = "get";

		OutputStream os = c.getOutputStream();
		DataOutputStream dos = new DataOutputStream(os);
		
		File filelist = new File("/");
		
		System.out.println(filelist.getAbsolutePath());
		
		//명령어 입력받기
		System.out.print("명령어 입력:");
		String command = scan.nextLine();
		do{
			if (command.equals(COMMAND_DIRECTORY)){
				showDir();
				break;
			} else if (command.contains(COMMAND_GETFILE)){
				downloadFile();
				break;
			} else {
				System.out.println("다시 입력하세요");
			}
		} while (true);

		
		//서버에게 시작으로부터 10개의 숫자 받아오기
		InputStream is = c.getInputStream();
		DataInputStream dis = new DataInputStream(is);

		for(int i=1 ; i <= 10 ; i++) {
			int j = dis.readInt();
			System.out.println("서버로부터 받은 데이터 " + j + " 출력");
		}
		c.close();




	}

	private static void downloadFile() {
		// TODO Auto-generated method stub
		
	}

	private static void showDir() {
		// TODO Auto-generated method stub
		
	}
}
